    <fieldset>
        <div class="form-group">
            <label for="title" class="form-label mt-4">Title</label>
            <input required value="<%= billet.title %>" type="text" class="form-control" name="title" id="title"
                placeholder="Enter title" required/>
            <small id="titleHelp" class="form-text text-muted">Find something catchy !</small>
        </div>

        <div class="form-group">
            <label for="description" class="form-label mt-4">Description</label>
            <textarea required class="form-control" name="description" id="description" rows="3"><%= billet.description %></textarea>
        </div>
    </fieldset>

    <div class="d-flex justify-content-end pt-4">
        <a type="button" class="btn btn-outline-danger m-2" href="/">
            Cancel
        </a>
        <button type="submit" class="btn btn-outline-success m-2">
            Submit
        </button>
    </div>
